<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="converter" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:background">@color/lowGreen</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>



    <style name="enterData" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">@dimen/marginHOfConverter</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="converterButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">@dimen/ButtonConverterHeight</item>
        <item name="android:layout_width">@dimen/ButtonConverterWidth</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="resultText" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/result</item>
        <item name="android:textSize">@dimen/sizeResultText</item>
        <item name="android:textColor">@color/lowGreen</item>
        <item name="android:layout_margin">@dimen/marginOfResult</item>
    </style>

    <style name="result" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/result</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/marginVEditeOfEnterData</item>
        <item name="android:paddingStart">@dimen/marginVEditeOfEnterData</item>
    </style>
</resources>